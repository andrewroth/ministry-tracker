<style type="text/css"> 

  #link_bar_wrapper {
    width: 100%;
    padding-top: 9px;
    background-color: #666766;
    font-family: Helvetica, Arial, Sans-Serif;

    box-shadow:0 -5px 10px #575757 inset;
  }

  .link_bar {
    display: block;
    position: relative;
    z-index: 100;
    height: 30px;
    width: <%= page_wrapper_width %>; /* page wrapper width */
    margin-left: auto;
    margin-right: auto;
    font-size:10px;
  }

  .link_bar ol#tools {
    position:absolute;
    list-style: none outside none;
    display: block;
    left: 0;
    margin: 0;
    padding: 0;
    white-space: nowrap;
    overflow: hidden;
  }
  
  ol#tools li {
    display: inline-block;
    height: 30px;
    position: relative;
    vertical-align: top;
    margin: 0;
    padding: 0 2px;
    list-style: none outside none;
    float:left; /* for IE7 */
  }

  .link_bar .rl {
    margin-left: 0.6em;
  }

  .link_bar strong.tab_left {
    color: #A6A6A6;
    background-image: url("<%=@base_url if @base_url%>/images/sprites/link_bar.png"); background-repeat: no-repeat;
    background-position: -10px -9px;
    padding-left: 12px;
    padding-right: 0px;
  }

  .link_bar strong.tab_right {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/link_bar.png"); background-repeat: no-repeat;
    background-position: -10px -58px;
    padding-left: 10px;
    padding-right: 0px;
  }

  .link_bar a {
    color: #D8D8D8;
    text-decoration: none;
    
    -moz-transition:color .2s ease; -webkit-transition:color .2s ease; -o-transition:color .2s ease; transition:color .2s ease;
  }

  .link_bar a:hover, .link_menu_box a:hover {
    color: #fdbb30;
  }

  .link_bar a.ll {
    display: block;
    border: solid transparent 8px;
    border-width:8px 4px 0;
    float:left;
  }

  .link_bar a:hover, .link_bar u:hover {
    text-decoration: none;
  }

  .link_menu_box {
    display: none;
    position: absolute;
    text-align: left;
    right: auto;
    padding-bottom: 3px;
    border: 6px solid #4c4c4c;
    z-index: 99;
    background: #4c4c4c;
    font-size: 11px;
    font-family: Helvetica, Arial, Sans-Serif;

    box-shadow: 0 3px 5px #575757;
    border-radius: 0 0 10px 10px;
  }

  .link_menu_box a {
    color:#D8D8D8;
    font-weight: bold;
    padding: 4px 8px;
    display: block;
    text-decoration: none;

    -moz-transition:color .2s ease; -webkit-transition:color .2s ease; -o-transition:color .2s ease; transition:color .2s ease;
  }

  .link_bar a.menu_link {
    padding-right: 10px;
  }

  .link_bar span.menu_link_arrow {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/link_bar.png"); background-repeat: no-repeat;
    background-position: -10px -108px;
    display: inline-block;
    height: 5px;
    position: absolute;
    top: 6px;
    right: -3px;
    width: 10px;
  }

  .link_bar a.menu_link:hover span.menu_link_arrow {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/link_bar.png"); background-repeat: no-repeat;
    background-position: -10px -132px;
  }

  .link_bar small {
    color: #1F429B;
  }

  .link_bar .ll {
    font-weight:bold;
    display:inline-block;
    height: 30px;
    position:relative;
  }

  .link_bar a.ll:hover {
    color: #fdbb30;
  }

  .link_bar a.ll:hover, .link_bar a.ll.menu_expanded {
    background-color:#4c4c4c;
    border-color:#4c4c4c;
    border-radius: 10px 10px 0 0;
  }

  .link_bar strong.ll a {
    position:relative;
    top:8px;
    display:inline;
    color:#666766;
    padding:8px 0;
  }

  .link_bar a small {
    color:#D8D8D8;
  }

  .link_bar a img {
    position:relative;
    top:6px;
  }

  .link_bar .active {
    display: block;
    padding-left: 0px;
    cursor: default;
  }

  .link_bar .icon_link {
    padding: 1px 13px;
  }

  .link_bar a.icon_link:hover {
    background-color:transparent;
  }

  .link_bar a.facebook {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/p2c_link_bar.png"); background-repeat: no-repeat;
    background-position: -6px -244px;
    border-width: 0;
  }
  .link_bar a.facebook:hover {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/p2c_link_bar.png"); background-repeat: no-repeat;
    background-position: -6px -289px;
  }

  .link_bar a.twitter {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/p2c_link_bar.png"); background-repeat: no-repeat;
    background-position: -8px -157px;
    border-width: 0;
    padding-left: 10px;
  }
  .link_bar a.twitter:hover {
    background-image: url("<%=@base_url if @base_url%>/images/sprites/p2c_link_bar.png"); background-repeat: no-repeat;
    background-position: -7px -201px;
  }
  
</style>
