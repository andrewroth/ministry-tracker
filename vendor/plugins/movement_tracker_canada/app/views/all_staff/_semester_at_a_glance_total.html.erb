        </td>
        <td class="t5">
            <%= gos_pres_total %>
        </td>
    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td class="t5">
            Gospel Presentations by Disciples
        </td>
        <td class="t5">
            <%= gos_pres_std_total %>
        </td>
    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td class="t5">
            Holy Spirit Presentations
        </td class="t5">
        <td class="t5">
