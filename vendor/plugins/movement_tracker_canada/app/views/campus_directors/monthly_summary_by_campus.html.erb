<!-- Title - Start-->
<p>
    <span class="heading">Monthly Summary by Campus</span>
</p>
<!-- Title - End -->

<!-- Form - Start -->
<div class="form1">
    <p>
        <% form_for :campus, :url => { :action => :monthly_summary_by_campus } do |form| %>
        <fieldset>
            <legend>
                <span class="title1">Please Select a Campus and Month</span>
            </legend>
            <p>
                <%= form.label :month, "Month:" %>
                <%= form.select( :month, @months, :selected => @curMonth ) %>
            </p>
            <p>
                <%= form.label :campus, "Campus:" %>
				<% if @campusSelected.present? %>
                <%= form.select :campus, @campuses, :selected => @campusSelected %>
				<% else %>
				<%= form.select :campus, @campuses, :selected => :first %>
				<% end %>
				
            </p>
            <p>
                <%= submit_tag "Submit" , :class => "submit" %>
            </p>
        </fieldset>
        <br/>
        <% end %>
    </p>
</div>
<!-- Form - End -->

<!-- Main Content - Start -->
<div id="results" align="center"<% if @monthID.nil? %> style="display: none"<% end %> ><% if !@monthID.nil? %>
    <p>
        <span class="title1">Stats for <%= sprintf("%s", @campusSelected) %> during <%= sprintf("%s", @monthSelected) %></span>
    </p>
    <p>
        <%= render :partial => "monthly_summary_by_campus_total" %>
        <br/>
    </p>
    <% end %>
</div>
<!-- Main Content - End -->

<p>
    <span class="text"><a href="/stats">Go Back</a></span>
</p>
