<p><span class="statsTitle"><%= @report_description %></span></p>
<table class="statsTable">


    <tr>
        <td><span class="statsTableTitle"><%= order_by_link('Date', 'prc_date') %></span></td>
	<% unless @campus_ids.nil? || @campus_ids.length <= 1 %>
        <td><span class="statsTableTitle"><%= order_by_link('Campus', 'campus_desc') %></span></td>
	<% end %>
        <td><span class="statsTableTitle"><%= order_by_link('Witness', 'prc_witnessName') %></span></td>
        <td><span class="statsTableTitle"><%= order_by_link('New Believer', 'prc_firstName') %></span></td>
        <td><span class="statsTableTitle"><%= order_by_link('Method', 'prcMethod_id') %></span></td>
        <td><span class="statsTableTitle"><%= order_by_link('Synopses', 'prc_notes') %></span></td>
        <td><span class="statsTableTitle"><%= order_by_link('Follow-up Complete', 'prc_7upCompleted') %></span></td>
    </tr>

    <% @prcs.each do |prc| %>
        <% if !prc.nil? %>
	        <tr class="<%= cycle('highlight', 'nohighlight') %>">
	            <td>
                  <%= prc.prc_date %>
	            </td>
  <% unless @campus_ids.nil? || @campus_ids.length <= 1 %>
              <td>
                  <%= @campuses[prc.campus_id].campus_shortDesc %>
              </td>
  <% end %>
	            <td>
                  <%= prc.prc_witnessName %>
	            </td>
	            <td>
                  <%= prc.prc_firstName %>
	            </td>
	            <td>
                <% if !prc.prcMethod_id.nil? %>
                  <%= @prc_methods[prc.prcMethod_id].prcMethod_desc %>
                <% end %>
	            </td>
	            <td>
                  <%= prc.prc_notes %>
	            </td>
              <td>
                  <% if prc.prc_7upCompleted == 0 %>
                        No
                  <% else %>
                        Yes
                  <% end %>
              </td>
	        </tr>
        <% end %>
    <% end %>
</table>
