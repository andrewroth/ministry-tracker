<% instruction_block do %>A verification email has been sent to <b><%= @email %></b>.  Click the link in the email to continue the registration process.<% end %>

<center>
  <%= render :partial => 'jquery_ui_progress', :locals => { :current_step => 1 } %>
</center>

<p class="center">
  <% if session[:from_facebook_canvas] == true %>
    <%= link_to "Back to the start", "#", :onclick => "top.location.href='/leave_facebook_and_js_redirect?js_redirect_url=#{Facebook::CANVAS_URL}'", :class => "action-button" %>
  <% else %>
    <%= link_to "Back to the login page", "/", :class => "action-button" %>
  <% end %>
</p>
