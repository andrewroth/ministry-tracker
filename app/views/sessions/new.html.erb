<%
unless @mobile
%>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
 
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"> 
<head> 
  <meta http-equiv="X-UA-Compatible" />
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" /> 
  <link rel="Shortcut Icon" href="https://www.campusforchrist.org/images/favicon.ico"> 
    
    <title>
      <% if Cmt::CONFIG[:web_title] %>
        <%= Cmt::CONFIG[:web_title] %>
      <% else %>
        Campus Movement Tracker
      <% end %>      
      <%= ': ' + @site_title if @site_title -%>
    </title>
		
  <%= stylesheet_link_tag "special_login", :media => "screen", :cache => "cache/special_login" %>
  </head> 
  <body> 

    <!--[if lt IE 8]>
      <div id='browser_warning'>
        <%= image_tag("exclamation.gif") %>
        <b>You are using an outdated browser (<%= link_to "what's a browser?", "http://www.whatbrowser.org/", :target => "_blank" %>)</b><br/>
        For a faster, safer browsing experience, upgrade for free to one of these browsers today:<br/>

        <%= link_to image_tag("browser_chrome_small.gif", :alt => "Google Chrome"), 'http://www.google.com/chrome', :title => "Google Chrome" %>
        <%= link_to image_tag("browser_firefox_small.gif", :alt => "Firefox"), 'http://www.mozilla.com/firefox/', :title => "Firefox" %>
        <%= link_to image_tag("browser_safari_small.gif", :alt => "Safari"), 'http://www.apple.com/safari/', :title => "Safari" %>
        <%= link_to image_tag("browser_ie_small.gif", :alt => "Internet Explorer"), 'http://www.microsoft.com/windows/internet-explorer/', :title => "Internet Explorer" %>
      </div>
    <![endif]-->

    <div class="flash notice" id="flash_notice" <%= "style=\"display:none;\"" unless flash[:notice] %>><%= flash[:notice] %></div>

    <%= image_tag("c4c-ptc-logo.png", :id => "c4c_logo")%>
    <div id="banner_container">
      <div id="banner_bg">
        <%= image_tag("log_in_main_img.png", :usemap => "#getin")%>
        <map name="getin">
          <area shape="rect" coords="313,67,498,205" href="<%= signup_url %>" alt="Join a Group (No need to login!)" />
          <area shape="rect" coords="519,120,614,190" href="https://thekey.me/cas/login.htm?service=<%= new_session_url %>&template=https://d15ip9v2bx8xzx.cloudfront.net/media/sso/c4ctemplate_cobrand.css" alt="Sign In" />
        </map>
      </div>
    </div>

    <div id="footer_container">
      <%= image_tag("log_in_c4c_disco_change.png", :id => "disco_change")%>
      <%= image_tag("log_in_pulse_explanation.png", :id => "pulse_explain")%>
      <%= link_to image_tag("log_in_create_login.png"), new_gcx_url, :id => "create_logon" %>
      <%= link_to image_tag("help.gif"), "https://www.mygcx.org/Pulse_Help_Center/screen/home", :id => "help_link" %>
    </div>
	</body>
</html>
<%
else
%>
    <ul data-role="listview" data-inset="true" data-theme="c" data-dividertheme="b"> 
      <li><a href="https://thekey.me/cas/login.htm?service=<%= new_session_url %>&template=https://d15ip9v2bx8xzx.cloudfront.net/media/sso/c4ctemplate_cobrand.css">Sign In</a></li> 
      <li><%= link_to 'How to Sign Up', new_gcx_url %></li> 
      <li><%= link_to 'Help', "https://www.mygcx.org/Pulse_Help_Center/screen/home" %></li> 
    </ul> 
 
 
<%
end
%>
