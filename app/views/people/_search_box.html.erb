<div id="searchBox">
  <div id="basic_search" <%= 'style="display:none"' if @advanced && authorized?(:advanced) %> >
    <br/>
    <%- form_tag directory_people_url do -%>
      <%= hidden_field_tag :format, :html %>
      <big>Search by name or email </big>
	    <%= text_field_tag "search"%>
	    <%= submit_tag "Go", :class => "action-button" %> &nbsp;&nbsp;
      <!-- <div class="butNormal" ><%= link_to "Show all from "+@ministry.name, directory_people_url, :method => :post %></div> -->
      <%- if authorized?(:advanced) %>
  		  <%= link_to_function "Advanced Search", "$('#basic_search').hide();$('#advanced_search').show();"%>
  	  <%- end -%>
	  <%- end -%>
	</div>

  <div id="advanced_search" <%= 'style="display:none"' unless @advanced && authorized?(:advanced) %>>
    <%= render :partial => 'advanced_search' %>
	</div>
	&nbsp;&nbsp;
</div>