<h3><%= @person.primary_campus.try(:name) %></h3>
<table width="100%" border="0" cellspacing="0" cellpadding="0" class="address">
<tr>

	<td>
	  <table>
    	<tr><td width="120px">Email</td><td width="200px"><%= @current_address.email %></td></tr>
    	<%- # If the person is under 21, show their full birthdate. Otherwise just show the day/month 
    	  format = @person.birth_date < 21.years.ago.to_date ? :short_ordinal : :long_ordinal if @person.birth_date -%>
    	<tr><td>Birth Day</td><td><%= format_date(@person.birth_date, format) %></td></tr>
    	<tr><td>Gender</td><td><%= @person.human_gender %></td></tr>
  		<%- if @person.user  -%>
      	<tr>
      	  <td>Facebook Username</td>
      	  <td><%= @person.user.facebook_username.present? ? @person.user.facebook_username : 'Click "Edit Information" to link your Facebook Account' %></td>
      	</tr>
      <%- end -%>
	  </table>
	</td>
	
	<td class="spacer">&nbsp;</td>
	
	<td>
	  <table>
    	<tr><td width="100px">Year in School</td><td><%= @person.most_recent_involvement.try(:school_year).try(:description) %></td></tr>
    	<tr><td>Graduation Date</td><td><%= format_date(@person.most_recent_involvement.try(:graduation_date)) %></td></tr>
    	<tr><td>Major</td><td><%= @person.most_recent_involvement.try(:major) %></td></tr>
    	<tr><td>Minor</td><td><%= @person.most_recent_involvement.try(:minor) %></td></tr>
    	<%- if !@person.url.blank?
    	      desc, url = parse_url(@person.url) -%>
    	<tr><td>Website</td><td><%= link_to(desc, url, :target => '_blank')  %></td></tr>
    	<%- end -%>
	  </table>
	</td>

</tr>

<tr>
	<td colspan="1"><h4 class="title">Current Address</h4></td>
	<td class="spacer">&nbsp;</td>
	<td colspan="1"><h4 class="title">Permanent Address</h4></td>
</tr>

<tr>
<td>
	
	<table>
	<tr><td width="150">Phone</td><td><%= @current_address.phone %></td></tr>
	<tr><td>Alternate Phone</td><td><%= @current_address.alternate_phone %></td></tr>
	<tr><td>Address</td><td><%= @current_address.mailing %></td></tr>
	<tr><td>&nbsp;</td><td><%= @current_address.dorm %> <%= "Room " + @current_address.room unless @current_address.room.to_s.empty? %></td></tr>
	</table>

</td>
<td class="spacer">&nbsp;</td>
<td>
	<table>
		<tr><td width="150">Phone</td><td><%= @perm_address.phone %></td></tr>
		<tr><td>Address</td><td><%= @perm_address.mailing %></td></tr>
	</table>
</td>
</tr>
<%- unless @current_address.start_date.to_s.empty? -%>
<tr><td colspan="3"> Valid from <strong><%= format_date(@current_address.start_date) %></strong> <% unless @perm_address.start_date.to_s.empty? %>through <strong><%= format_date(@current_address.end_date) %></strong><% end  %></td></tr>
<%- end -%>



