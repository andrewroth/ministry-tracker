<%- if is_ministry_leader -%>
	<%- remote_form_for @person do |f| -%>
	<div id="staffArea">
		<span class="notice">(everything below this is only seen by those designated as leaders of this ministry)</span><br />
		<% i = 0 %>
		<table width="100%">
		<tr>
		<%- @ministry.profile_questions.each do |ca| -%>
			<td width="15%"><%= ca.name %>: </td><td> <%= custom_field(ca, @person) %></td>
			<% i +=1 %>
			<%- if i%2 == 0 then i = 0 -%></tr><tr><%- end -%>
		<%- end -%>
		<%- while i < 2 do 
				i +=1-%>
				<td width="25%">&nbsp;</td><td>&nbsp;</td>
		<%- end unless i == 0 -%>
		</tr>
		</table>
		Leadership notes: <br />
		<%= f.text_area :staff_notes, :rows => 4, :cols => 40 %>
    <%= submit_tag %>
	</div>
	<%- end -%>
<%- end -%>
