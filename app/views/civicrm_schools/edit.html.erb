<h1 class="center"><%= @school.attr(:display_name) %></h1><br>

<% form_tag({:controller => :civicrm_schools, :action => :update}, {:method => :put}) do %>

<%= hidden_field(:civicrm_schools, :id, :value => params[:id]) %>
