<h1>Listing terms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Default</th>
    <th>Start</th>
    <th>End</th>
    <th>School year</th>
    <th>Verify date sent</th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%=h term.name %></td>
    <td><%=h term.default %></td>
    <td><%=h term.start %></td>
    <td><%=h term.end %></td>
    <td><%=h term.school_year %></td>
    <td><%=h term.verify_date_sent %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New term', new_term_path %>