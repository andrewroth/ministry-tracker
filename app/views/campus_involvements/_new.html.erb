<div class='inline_ajax_form'>
<% remote_form_for(@campus_involvement, 
                   :url => person_campus_involvements_url(@person.id),
                   :method => :post) do |f|
%>
  <%= render :partial => 'form', :locals => { :year_only => false } %>
