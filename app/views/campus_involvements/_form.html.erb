<%= error_messages_for :campus_involvement %>
<%- unless year_only -%>
<%= t("profile.headings.campus") %>: <%= collection_select :campus_involvement, :campus_id, @campuses, :id, :name, { :include_blank => true } %><br/>
<%- end -%>
<%= t("profile.headings.year_in_school") %>: <%= select :campus_involvement, :school_year_id, school_year_options %><br/>
<% if @student %>
<%= t("profile.headings.role") %>: <%= select_tag 'ministry_involvement[ministry_role_id]', grouped_options_for_select(@roles, @ministry_involvement.try(:ministry_role_id) || @default_role_id) %><br/>
<% end %>
