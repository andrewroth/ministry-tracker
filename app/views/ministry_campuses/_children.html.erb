<% children = parent.people_responsible_for %>
<%- if children -%>
  <%- children.each do |child| -%>
  	<% mi = child.ministry_involvements.find_by_ministry_id(@ministry) -%>
    <%- if mi -%>    
 			<% now = 0 %>
 			<%- while now < count -%>
    		&nbsp &nbsp &nbsp
 				<%  now += 1 %>
 			<%- end -%>
    	<%= child.full_name %>, &nbsp
    	<%= mi.ministry_role.name %>
    	<br />
    	<%= render :partial => 'children', :locals => {:parent => child, :count => count + 1} %>
    <%- end -%>
  <%- end -%>
<%- end -%>    
  
