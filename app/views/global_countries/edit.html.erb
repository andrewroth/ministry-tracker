  <p>
    <%= f.label :iso3 %><br />
    <%= f.text_field :iso3 %>
  </p>
  <p>
    <%= f.label :stage %><br />
    <%= f.text_field :stage %>
  </p>
  <p>
    <%= f.label :live_exp %><br />
    <%= f.text_field :live_exp %>
  </p>
  <p>
    <%= f.label :live_dec %><br />
    <%= f.text_field :live_dec %>
  </p>
  <p>
    <%= f.label :new_grth_mbr %><br />
    <%= f.text_field :new_grth_mbr %>
  </p>
  <p>
    <%= f.label :mvmt_mbr %><br />
    <%= f.text_field :mvmt_mbr %>
  </p>
  <p>
    <%= f.label :mvmt_ldr %><br />
    <%= f.text_field :mvmt_ldr %>
  </p>
  <p>
    <%= f.label :new_staff %><br />
    <%= f.text_field :new_staff %>
  </p>
  <p>
    <%= f.label :lifetime_lab %><br />
    <%= f.text_field :lifetime_lab %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

